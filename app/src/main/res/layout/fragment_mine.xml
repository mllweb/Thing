<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_action_bar_height"
        android:background="@color/action_bar"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/main_tab_mine"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_title_text_size" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_margin"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_title_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/un_login_layout"
        android:layout_width="match_parent"
        android:layout_height="88dip"
        android:layout_marginTop="@dimen/activity_margin"

        android:background="@color/white">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/theme_color_green"
            android:textSize="@dimen/action_bar_title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="88dip"
            android:layout_marginTop="@dimen/activity_margin"
            android:background="@drawable/xml_click_bg"
            android:clickable="true"
            android:visibility="gone">

            <com.mllweb.thing.ui.view.CircleImageView
                android:id="@+id/head_image"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_margin"
                android:src="@drawable/rc_ic_def_coversation_portrait" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_user_sign"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginTop="8dip"
                    android:gravity="top"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:background="@color/split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_click_bg"
                android:clickable="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"
                android:background="@color/split_line" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_click_bg"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_post"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@drawable/xml_click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/myinfo_icon_mytopic_nor" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我发表的帖子"
                android:textColor="#333333"
                android:textSize="@dimen/action_bar_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/split_line" />

        <LinearLayout
            android:id="@+id/my_comment"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@drawable/xml_click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/myinfo_icon_yhfk_nor" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我的评论"
                android:textColor="#333333"
                android:textSize="@dimen/action_bar_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/split_line" />

        <LinearLayout
            android:id="@+id/my_collection"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@drawable/xml_click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/myinfo_icon_collect_normal" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我收藏的帖子"
                android:textColor="#333333"
                android:textSize="@dimen/action_bar_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/split_line" />

        <LinearLayout
            android:id="@+id/my_praise"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@drawable/xml_click_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/myinfo_icon_st_nor" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我顶过的帖子"
                android:textColor="#333333"
                android:textSize="@dimen/action_bar_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>